@using CodingEventsDemo.ViewModels;
@model AddEventCategoryViewModel;

<h1>Add an Event Category</h1>

<form method="post">
    <div asp-controller="EventCategory" asp-action="Create" class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <input type="submit" value="Create Category" />
</form>